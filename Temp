import React from 'react';
import { Card, Row, Col, Badge, ListGroup } from 'react-bootstrap';

/**
 * ertStatus is an object:
 * {
 *   "Incident Controller": [{ name, email, phone, present }, ‚Ä¶],
 *   "First Aid Team":      [ ‚Ä¶ ],
 *   ‚Ä¶
 * }
 */
export default function ERTOverview({ ertStatus }) {
  const roles = Object.entries(ertStatus);

  return (
    <div className="mt-5">
      <h3>üõ°Ô∏è ERT Member Status</h3>
      <Row className="g-4">
        {roles.map(([role, members]) => (
          <Col key={role} md={6} lg={4}>
            <Card>
              <Card.Header className="bg-primary text-white">
                {role}
              </Card.Header>
              <ListGroup variant="flush">
                {members.map(({ name, email, phone, present }) => (
                  <ListGroup.Item key={name} className="d-flex justify-content-between align-items-center">
                    <div>
                      <strong>{name}</strong><br/>
                      <small>{email}</small><br/>
                      <small>{phone}</small>
                    </div>
                    <Badge bg={present ? 'success' : 'secondary'}>
                      {present ? 'Present' : 'Absent'}
                    </Badge>
                  </ListGroup.Item>
                ))}
              </ListGroup>
            </Card>
          </Col>
        ))}
      </Row>
    </div>
  );
}


