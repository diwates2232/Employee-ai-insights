      uniquePeople.set(dedupKey, PersonnelType);
      current[dedupKey] = {
        Dateonly, Swipe_Time, EmployeeID,
        ObjectName1, CardNumber, PersonnelType, floor
      };
    } else {
      uniquePeople.delete(dedupKey);
      delete current[dedupKey];
    }
  }

  let employeeCount   = 0;
  let contractorCount = 0;
